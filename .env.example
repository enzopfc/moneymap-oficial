# ===================================
# MoneyMapp Environment Variables
# ===================================

# apps/api - Backend Configuration
# ===================================
PORT=3333
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/moneymapp
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW=60000

# External Services
SENTRY_DSN=
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@moneymapp.com

# ===================================
# apps/web - Frontend Configuration
# ===================================

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# API Integration
API_BASE_URL=http://localhost:3333

# External Services
NEXT_PUBLIC_SENTRY_DSN=

# Development
ANALYZE=false
